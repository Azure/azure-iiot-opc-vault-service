@model IEnumerable<Microsoft.Azure.IIoT.OpcUa.Services.GdsVault.Common.Models.CertificateRequest>

@{
    ViewBag.Title = "List of Certificate Requests";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List of Certificate Requests</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RequestId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ApplicationId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SubjectName)
        </th>
        <th></th>
    </tr>

    @foreach (var request in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(requestItem => request.RequestId)
            </td>
            <td>
                @Html.DisplayFor(requestItem => request.ApplicationId)
            </td>
            <td>
                @Html.DisplayFor(requestItem => request.State)
            </td>
            <td>
                @Html.DisplayFor(requestItem => request.SubjectName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = request.RequestId }) |
                @Html.ActionLink("Details", "Details", new { id = request.RequestId }) |
                @Html.ActionLink("Delete", "Delete", new { id = request.RequestId })
            </td>
        </tr>
    }

</table>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
