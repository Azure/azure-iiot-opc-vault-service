<?xml version="1.0" encoding="utf-8"?>
<configuration>
    <system.webServer>
        <httpProtocol>
            <customHeaders>
                <remove name="X-Powered-By" />
                <remove name="Server" />
                <add name="X-Content-Type-Options" value="nosniff" />
            </customHeaders>
        </httpProtocol>
        <applicationInitialization>
            <add initializationPage="/" />
            <add initializationPage="/Application" />
        </applicationInitialization>
    </system.webServer>
</configuration>

