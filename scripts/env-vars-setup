#!/usr/bin/env bash

#  Prepare the environment variables used by the application.

# The port where this project's web service is listening
export PCS_PROJECTNAMEHERE_WEBSERVICE_PORT="900X"

# Some settings are used to connect to an external dependency, e.g. Azure IoT Hub and IoT Hub Manager API
# Depending on which settings and which dependencies are needed, edit the list of variables

# see: Shared access policies => key name => Connection string
export IOTHUB_CONN_STRING="..."

# The host where IoT Hub Manager web service is listening
export PCS_IOTHUBMANAGER_WEBSERVICE_HOST="127.0.0.1"

# The port where IoT Hub Manager web service is listening
export PCS_IOTHUBMANAGER_WEBSERVICE_PORT="9001"
